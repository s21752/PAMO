<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/clRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_padding"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="@dimen/font_size_medium"
        tools:text="Recipe 1"
        />

   <TextView
       android:id="@+id/tvIngredientsLabel"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="@dimen/small_padding"
       android:layout_marginTop="@dimen/small_padding"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/tvTitle"
       android:textStyle="bold"
       android:text="@string/ingredients_label"
       />

    <TextView
        android:id="@+id/tvIngredients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_padding"
        android:paddingStart="@dimen/default_padding"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvIngredientsLabel"
        tools:text="skladniki\nskladniki\nskladnik"
        />

    <TextView
        android:id="@+id/tvDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_padding"
        android:paddingBottom="@dimen/small_padding"
        app:layout_constraintTop_toBottomOf="@id/tvIngredients"
        tools:text="asldjaljdl jaskdj ajsdkjakjdkj aklsjdkj aklsjdlkajslkdjaklsj dkldjaklsd jklajskldj akljkldja klsjkldjklajsdlkj lkajsdkl ja"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        app:layout_constraintTop_toBottomOf="@id/tvDetails"
        />

</androidx.constraintlayout.widget.ConstraintLayout>